<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericsson.android">

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.kotlin.base.common.BaseApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.MainActivity">

        </activity>

        <activity android:name=".ui.activity.SettingActivity"/>

        <activity android:name=".ui.activity.RegisterActivity"/>
        <activity android:name=".ui.activity.ForgetPwdActivity"/>
        <activity android:name=".ui.activity.ResetPwdActivity"/>
        <activity android:name=".ui.activity.UserInfoActivity"/>
        <!-- goods -->
        <activity android:name=".ui.activity.GoodsActivity"/>
        <activity android:name=".ui.activity.SearchGoodsActivity"/>
        <activity android:name=".ui.activity.GoodsDetailActivity"
            android:theme="@style/AppTheme.Black"
            />
        <activity android:name=".ui.activity.CartActivity"/>
        <!-- order -->
        <activity android:name=".ui.activity.OrderConfirmActivity"/>
        <activity android:name=".ui.activity.ShipAddressActivity"/>
        <activity android:name=".ui.activity.ShipAddressEditActivity"/>
        <activity android:name=".ui.activity.OrderActivity"/>
        <activity android:name=".ui.activity.OrderDetailActivity"/>
    </application>

</manifest>